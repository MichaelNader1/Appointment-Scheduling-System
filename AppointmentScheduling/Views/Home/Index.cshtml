@{
    Layout = "_Layout";
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Page - Appointments Scheduling</title>

    <style>
   
        .fade-in {
            animation: fadeIn 2s ease-in-out;
        }

        /* Optional: Additional animation on hover */
        .cta-button:hover {
            background-color: #28a745;
            color: white;
            transform: scale(1.1); /* Slight zoom effect on hover */
        }
    </style>
</head>
<body>

    <!-- Welcome Section with animation -->
    <div class="welcome-section d-flex justify-content-center align-items-center text-center text-white fade-in">
        <div class="welcome-content p-5 bg-dark bg-opacity-50 rounded">
            <h1 class="display-4">Welcome to Appointments Scheduling</h1>
            <p class="lead">Effortlessly book, manage, and track your appointments. Organize your schedule in just a few clicks!</p>

            <a asp-controller="Appointment" asp-action="index" class="btn btn-primary cta-button btn-lg mt-3">
                Get Started 
            </a>
        </div>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
